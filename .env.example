DATABASE_URL=postgresql://user:password@localhost:5432/rpg_character_db?schema=public
PORT=4000
NODE_ENV=development
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_IDS=
# In production, auth defaults to true if variable is omitted.
REQUIRE_TELEGRAM_AUTH=true
# Enable only for local/dev testing when REQUIRE_TELEGRAM_AUTH=false
ALLOW_TELEGRAM_USER_ID_FALLBACK=false
# Dev-only auth bypass. When true (and NODE_ENV!=production), middleware sets telegramUserId from
# x-telegram-user-id header or TELEGRAM_BYPASS_USER_ID.
TELEGRAM_BYPASS=false
TELEGRAM_BYPASS_USER_ID=123456789
TELEGRAM_INITDATA_MAX_AGE_SEC=86400
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=120
REQUEST_SLOW_MS=1200
SESSION_EVENTS_CLEANUP_ENABLED=true
SESSION_EVENTS_RETENTION_DAYS=30
SESSION_EVENTS_CLEANUP_INTERVAL_MIN=60
# Enables feature/modifier projection in sheet via capability resolver adapter path.
# Keep false until parity validation is complete.
SHEET_RESOLVER_ADAPTER_ENABLED=false
# Enables resolver-first sheet cutover mode.
# When true, resolver path is mandatory unless SHEET_LEGACY_FALLBACK_ENABLED=true.
SHEET_RESOLVER_CUTOVER_ENABLED=false
# Optional explicit legacy fallback toggle for sheet generation.
# If omitted, defaults to true when cutover=false and false when cutover=true.
SHEET_LEGACY_FALLBACK_ENABLED=true